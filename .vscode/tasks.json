{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "make",
            "type": "process",
            "args": [
                "-j8"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "clean",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "type": "process",
            "problemMatcher": []
        },
        {
            "label": "cmake",
            "command": "cmake",
            "args": [
                "../"
            ],
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "type": "process",
            "problemMatcher": []
        },
        {
            "label": "game",
            "type": "process",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "command": "./bin/game_exe.app/Contents/MacOS/game_exe",
            "args": [
                "--position", "500", "0",
            ],
            "problemMatcher": []
        },
        {
            "label": "game test",
            "type": "process",
            "command": "./bin/game_test_exe",
            "args": [ ],
            "problemMatcher": []
        },
        {
            "label": "editor",
            "type": "process",
            "command": "./bin/editor.app/Contents/MacOS/editor",
            "args": ["res/world.world"],
            "problemMatcher": []
        }
    ]
}